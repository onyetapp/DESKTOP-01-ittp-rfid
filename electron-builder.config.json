{
  "appId": "id.onyet.ittprfid",
  "directories": {
    "buildResources": "resources"
  },
  "files": [
    "assets/**/*",
    "build/**/*",
    "capacitor.config.*",
    "app/**/*"
  ],
  "publish": {
    "provider": "github",
    "owner": "onyetapp",
    "tag": "latest",
    "version": "1.0.0"
  },
  "nsis": {
    "allowElevation": true,
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "target": "nsis",
    "icon": "assets/favicon.ico"
  },
  "mac": {
    "category": "your.app.category.type",
    "target": "dmg"
  }
}
